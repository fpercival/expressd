{
	"name": "My_Expressd",
    "port": 2000,
    "express": {
        "session": {
            "secret": "change_this",
            "cookie": {}
        },
        "bodyParser": {
            "urlencoded": { "extended": false },
            "json": {"limit": "10mb"}
        }
    },
    "db": {
            "adapters": {
                "disk": "sails-disk"
            },
            "connections": {
                "default": {
                    "adapter": "disk"
                }
            }
    },
    "env":{
        "production": {
            "db": {
                "adapters": {
                    "mongo": "sails-mongo"
                },
                "connections": {
                    "default": {
                        "migrate": "safe",
                        "adapter": "mongo",
                        "host": "localhost",
                        "port": 27017,
                        "database": "expressd"
                    }
                },
                "defaults": {
                    "migrate": "safe"
                }
            }
        }
    },
    "mailer":{
		"name": "ExpressdApp",
        "noreply": "noreply@your_mail_server.com",
        "mail":{
            "service": "Gmail",
            "auth": {
                "user": "mail_account@gmail.com",
                "pass": "password"
            }
        }
    },
    "log": {
        "filter": "*",
        "level": "debug"
    }
}
